<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- MAIN APP THEME (no top bar / no action bar) -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- SPLASH SCREEN THEME -->
    <style name="Theme.MyApplication.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/storymate</item>
        <item name="windowSplashScreenBackground">@drawable/background_general</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>

</resources>
